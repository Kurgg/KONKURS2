@page
@model KONKURS2.Pages.YRITUSED.createModel
@{
}

<br />
<h2>Uus Üritus</h2>

@if (Model.errorMessage.Length > 0) {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}
<form method="POST">
    <div class="row mb-3">
        <label classclass="col-sm-3 col-form-label">Ürituse nimi</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="nimi" value="@Model.YrituseInfo.nimi" />
        </div>
    </div>

    <div class="row mb-3">
        <label classclass="col-sm-3 col-form-label">Toimumisaeg</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="aeg" value="@Model.YrituseInfo.aeg" />
        </div>
    </div>

    <div class="row mb-3">
        <label classclass="col-sm-3 col-form-label">Koht</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="koht" value="@Model.YrituseInfo.koht" />
        </div>
    </div>

    <div class="row mb-3">
        <label classclass="col-sm-3 col-form-label">Lisainfo</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="kirj" value="@Model.YrituseInfo.kirj" />
        </div>
    </div>

    @if (Model.onSuccess.Length > 0) {
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <strong>@Model.onSuccess</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">Close</button>
                </div>
            </div>
</div>
    }

    <div class="row mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    <div class="colcol-sm-3 d-grid">
        <a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
</div>

</form>